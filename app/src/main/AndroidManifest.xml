<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION"/>
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_actual"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InputVariablesAndOperations">
        <activity
            android:name=".helpActivity"
            android:exported="false" />
        <activity
            android:name=".MotionActivity"
            android:exported="false" />
        <activity
            android:name=".PositionActivity"
            android:exported="false" />
        <activity
            android:name=".EnvironmentActivity"
            android:exported="false" />
        <activity
            android:name=".GeoMagneticActivity"
            android:exported="false" />
        <activity
            android:name=".CompassActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProximitySensorAcitivty"
            android:exported="false" />
        <activity
            android:name=".StepCounterActivity"
            android:exported="false" />
        <activity
            android:name=".AccelorometerActivity"
            android:exported="false" />
        <activity
            android:name=".AllAvailableSensors"
            android:exported="false" />
        <activity
            android:name=".PhoneInformationActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PressureSensor"
            android:exported="false" />
        <activity
            android:name=".HumiditySensor"
            android:exported="false" />
        <activity
            android:name=".TemperatureSensor"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>